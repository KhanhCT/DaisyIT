<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="49.0dip"
    android:background="@drawable/searchbackground"
    android:orientation="horizontal"
    android:paddingLeft="8.0dip" 
    android:paddingTop="10.0dip" 
    android:paddingRight="5.0dip" 
    android:paddingBottom="10.0dip" 
    android:weightSum="1.0"
   >
<EditText 
    android:textSize="@dimen/text_size_2" 
    android:textColor="@color/grey" 
    android:id="@id/search" 
    android:background="@drawable/search" 
    android:paddingLeft="27.0dip" 
    android:focusable="false" 
    android:layout_width="@dimen/width_1" 
    android:layout_height="@dimen/height_1" 
    android:hint="@string/search_hint" 
    android:layout_weight="0.9" 
    android:onClick="BindSearchItem" />
    
    <Button 
        android:textStyle="bold" 
        android:textColor="@color/white" 
        android:id="@+id/savesearch" 
        android:background="@drawable/savebtn" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="3.0dip" 
        android:layout_marginRight="3.0dip" 
        android:text="@string/save" 
        android:layout_weight="0.1" 
        android:onClick="SavedSearchQuery" />
    <Button 
        android:textStyle="bold" 
        android:textColor="@color/white" 
        android:id="@+id/refine" 
        android:background="@drawable/savebtn" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" 
        android:text="@string/refine" 
        android:onClick="RefineQuery" />
    
    

</LinearLayout>
